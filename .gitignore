# --- Ignore Python artifacts ---
__pycache__/
*.py[cod]
*$py.class

# --- Ignore virtual environments and dotenv files ---
.env
.env.*.local
.venv/
venv/
ENV/
env/

# --- Ignore IDE/editor config ---
.vscode/
.idea/

# --- Ignore logs, databases, temp files ---
*.log
*.sqlite3
*.tmp
*.temp
~$*
*.swp

# --- Ignore Docker-related files not needed in repo ---
docker-compose.override.yml
.dockerignore

# --- Ignore your runtime folders (these get created at container startup) ---
input/
logs/
output/
processed/

# --- Ignore your 'old files' folder if you use one locally ---
old files/

# --- Ignore that PowerShell rebuild script if you keep it local-only ---
rebuild.ps1

# --- Ignore OS junk ---
.DS_Store
Thumbs.db

# --- Obsidian Vault Symlinks ---
# Don't ignore the vault directories themselves
!obsidian-vault-meta/
!obsidian-vault-plugins/

# Ignore plugin binaries but keep configuration files
obsidian-vault-plugins/*/main.js
obsidian-vault-plugins/*/manifest.json
obsidian-vault-plugins/*/styles.css
!obsidian-vault-plugins/dataview/data.json
!obsidian-vault-plugins/dataview/*.css
!obsidian-vault-plugins/templater-obsidian/data.json

# Ignore other plugins we don't need to track
obsidian-vault-plugins/calendar/
obsidian-vault-plugins/metaedit/
obsidian-vault-plugins/obsidian-local-rest-api/
obsidian-vault-plugins/tag-wrangler/client_secret_*.json
